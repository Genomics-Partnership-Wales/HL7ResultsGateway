{
  "chat.modeFilesLocations": {
    ".github/awesome-copilot/chatmodes": true
  },
  "chat.promptFilesLocations": {
    ".github/awesome-copilot/prompts": true
  },
  "chat.instructionsFilesLocations": {
    ".github/awesome-copilot/instructions": true
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.fixAll": "explicit"
  },
  "[csharp]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.removeUnusedImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.formatOnSave": true
  },
  "editor.rulers": [
    100
  ],
  "files.associations": {
    "*.chatmode.md": "markdown",
    "*.instructions.md": "markdown",
    "*.prompt.md": "markdown"
  },
  "github.copilot.chat.reviewSelection.instructions": [
    { "file": ".github/awesome-copilot/instructions/gilfoyle-code-review.instructions.md" }
  ],
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "file": ".github/awesome-copilot/instructions/conventional-commit-message.instructions.md" }
  ],
  "azureFunctions.projectSubpath": "src\\HL7ResultsGateway.API"
}
